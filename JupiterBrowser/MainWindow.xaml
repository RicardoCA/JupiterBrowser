<Window x:Class="JupiterBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JupiterBrowser"
        mc:Ignorable="d"
        Title="Jupiter Browser" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="#FF333333" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <ContextMenu x:Key="BrowserMenu">
            <MenuItem Header="Check for Updates" Click="CheckForUpdates_Click"/>
            <MenuItem Header="Contact Jupiter" Click="ContactJupiter_Click" />
            <MenuItem Header="Sidebar Theme" Click="SidebarThemeMenu_Click"/>
            <MenuItem Header="Shortcuts" Click="ShortCuts_Click" />
            <MenuItem Header="Quit" Click="QuitMenu_Click"/>
        </ContextMenu>

        

        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="10,10,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="180"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="10,40,10,10"/>
            <Setter Property="AllowDrop" Value="True"/>
        </Style>
        <Style TargetType="ContentControl">
            <Setter Property="Background" Value="#FFF0F0F0"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Content" Value="X"/>
        </Style>
        <DataTemplate x:Key="PinnedTabTemplate">
            <StackPanel Orientation="Vertical">
                <Image Source="{Binding LogoUrl}" Width="16" Height="16" Margin="11" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="TabItemTemplate">
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding LogoUrl}" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding TabName}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Button Style="{StaticResource CloseButtonStyle}" 
                        Click="CloseTabButton_Click"/>
            </StackPanel>
        </DataTemplate>
        <!-- Define the ItemsPanelTemplate for the PinnedTabsListBox -->
        <ItemsPanelTemplate x:Key="PinnedTabsItemsPanelTemplate">
            <WrapPanel Orientation="Horizontal" ItemWidth="50" ItemHeight="50"/>
        </ItemsPanelTemplate>
    </Window.Resources>

    

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Menu Lateral -->
        <Grid Background="#FF2D2D30" Grid.Column="0" x:Name="Sidebar">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Disabled">
                    <ListBox Name="PinnedTabsListBox"
                             ItemTemplate="{StaticResource PinnedTabTemplate}"
                             ItemsPanel="{StaticResource PinnedTabsItemsPanelTemplate}"
                             Background="Transparent" BorderThickness="0" 
                             MouseDoubleClick="PinnedTabsListBox_MouseDoubleClick"
                             Margin="10" HorizontalAlignment="Stretch"/>
                </ScrollViewer>
                <DockPanel>
                    <Button x:Name="newTabBtn" Content="+ New Tab" Click="NewTabButton_Click" DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="5"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                        <Button Margin="5" Width="35" Height="35" Click="BackButton_Click">
                            <Button.Content>
                                <Path Data="M 10,0 L 0,10 L 10,20 L 8,18 L 2,10 L 8,2 Z"
                                    Fill="White"
                                    Stretch="Uniform" />
                            </Button.Content>
                        </Button>
                        <Button Margin="5" Width="35" Height="35" Click="ForwardButton_Click">
                            <Button.Content>
                                <Path Data="M 0,0 L 10,10 L 0,20 L 2,18 L 8,10 L 2,2 Z"
                      Fill="White"
                      Stretch="Uniform" />
                            </Button.Content>
                        </Button>
                        <Button Margin="5" Width="35" Height="35" Click="ReloadButton_Click">
                            <Button.Content>
                                <Path Data="M12,2V6H10V3.3A8,8,0,1,0,14.7,11H12V13h6V7H16V9.7A10,10,0,1,1,12,2Z"
                                  Fill="White"
                                  Stretch="Uniform"/>   
                            </Button.Content>
                        </Button>
                        <Button Margin="5" Width="35" Height="35" Click="SidebarToggle_Click">
                            <Button.Content>
                                <StackPanel>
                                    <Rectangle Fill="White" Width="25" Height="3" Margin="0,3,0,3"/>
                                    <Rectangle Fill="White" Width="25" Height="3" Margin="0,3,0,3"/>
                                    <Rectangle Fill="White" Width="25" Height="3" Margin="0,3,0,3"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </DockPanel>

                <!-- ListBox para as guias -->
                <ListBox Name="TabListBox" 
                         ItemTemplate="{StaticResource TabItemTemplate}" 
                         SelectionChanged="TabListBox_SelectionChanged"
                         PreviewMouseLeftButtonDown="TabListBox_PreviewMouseLeftButtonDown"
                         DragOver="TabListBox_DragOver"
                         Drop="TabListBox_Drop"/>
                <Border x:Name="MiniPlayer" Visibility="Collapsed" Background="LightGray" Margin="5" Padding="10">
                    <StackPanel x:Name="StackMiniPlayer">
                        <TextBlock Text="Mini Player" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock x:Name="MusicTitle" Text="Title" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Button Content="Play" Click="MiniPlayer_Play_Click"/>
                        <Button Content="Pause" Click="MiniPlayer_Pause_Click"/>
                        <Button Content="Stop" Click="MiniPlayer_Stop_Click"/>
                        <Button Content="Previus" Click="MiniPlayer_Previus_Click"/>
                        <Button Content="Next" Click="MiniPlayer_Next_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            <!-- Botão no final -->
            
            <Button Grid.Row="1" Margin="10" Click="HistoricButton_Click" Width="50">
                <Button.Content>
                    <Path Data="M 4 1 L 6 1 L 6 0 L 10 0 L 10 1 L 12 1 L 12 3 L 2 3 L 2 1 Z
                                M 3 3 L 11 3 L 10 12 L 4 12 Z
                                M 5 5 L 5 10
                                M 7 5 L 7 10
                                M 9 5 L 9 10"
                                Fill="Transparent"
                                Stroke="White"
                                StrokeThickness="1"
                                Stretch="Uniform" />  
                </Button.Content>
            </Button>
            <Button Grid.Row="1" Margin="140,10,0,10" Click="OpenBrowserMenu_Click" Width="50">
                <Path Data="M16 8a8 8 0 1 1-16 0 8 8 0 0 1 16 0zm-1.5 0a6.5 6.5 0 1 0-13 0 6.5 6.5 0 0 0 13 0zm-6.75 0a5.25 5.25 0 1 1-10.5 0 5.25 5.25 0 0 1 10.5 0z"
                    Fill="Transparent"
                    Stroke="White"
                    StrokeThickness="1"
                    Stretch="Uniform" />
            </Button>

        </Grid>
        
        <!-- Área de Conteúdo -->
        <Border Background="#FFF0F0F0" CornerRadius="10" Margin="10" Grid.Column="1" x:Name="ContentBorder">
            <ContentControl Name="ContentArea"/>
        </Border>
    </Grid>
</Window>

