<Window x:Class="JupiterBrowser.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight">
    <Border Background="Black" CornerRadius="5" Padding="10" Margin="10">
        <TextBlock x:Name="MessageText" Foreground="White" FontSize="14" TextWrapping="Wrap" />
    </Border>
</Window>
